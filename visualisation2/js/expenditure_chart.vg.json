{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/danpham02/fit3179/main/visualisation2/data/aihw-93-Health-expenditure-datacube-2021_22.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "filter": "datum.Year == '2021-22'"
      },
      {
        "filter": "datum.Sector == 'Hospitals'"
      },
      {
        "aggregate": [
          {"op": "sum", "field": "Current amount (million)", "as": "TotalExpenditure"}
        ],
        "groupby": ["Jurisdiction"]
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Jurisdiction",
        "type": "nominal",
        "title": "State or Territory"
      },
      "y": {
        "field": "TotalExpenditure",
        "type": "quantitative",
        "title": "Total Healthcare Expenditure ($)"
      },
      "tooltip": [
        {"field": "Jurisdiction", "type": "nominal", "title": "State"},
        {"field": "TotalExpenditure", "type": "quantitative", "title": "Total Expenditure ($)"}
      ]
    },
    "title": "Healthcare Expenditure by State (Hospitals, 2021-22)"
  }
  