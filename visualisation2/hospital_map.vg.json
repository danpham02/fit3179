{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "data": {
      "url": "AUS_2016_AUST.topojson",
      "format": {
        "type": "topojson", 
        "feature": "AUS_2016_AUST"  
      }
    },
    "layer": [
      {
        "mark": "geoshape",
        "encoding": {
          "color": {
            "field": "hospital_density", 
            "type": "quantitative",
            "scale": {
              "scheme": "blues"
            }
          }
        }
      },
      {
        "data": {
          "url": "myhospitals-contact-details.csv"
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "Longitude"
          },
          "latitude": {
            "field": "Latitude"
          },
          "size": {
            "field": "Beds",
            "type": "quantitative"
          },
          "color": {
            "field": "Sector",
            "type": "nominal",
            "scale": {
              "domain": ["Public", "Private"],
              "range": ["#1f77b4", "#ff7f0e"]
            }
          },
          "tooltip": [
            {"field": "Hospital name", "type": "nominal"},
            {"field": "Beds", "type": "quantitative"},
            {"field": "Sector", "type": "nominal"},
            {"field": "Description", "type": "nominal"}
          ]
        }
      }
    ],
    "projection": {
      "type": "mercator" 
    }
  }
  